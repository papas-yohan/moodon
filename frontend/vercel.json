{
  "rewrites": [
    {
      "source": "/api/:path(.*)",
      "destination": "https://backend-production-c41fe.up.railway.app/api/:path"
    },
    {
      "source": "/uploads/:path(.*)",
      "destination": "https://backend-production-c41fe.up.railway.app/uploads/:path"
    },
    {
      "source": "/:path((?!api|uploads).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
